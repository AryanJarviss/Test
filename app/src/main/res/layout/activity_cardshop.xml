<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CardshopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCB122"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/bak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/bak"
                android:fontFamily="@font/gilroy_regular"
                android:text="The Urban Gumti"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/lc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginTop="20dp"
                android:background="#FCB122"
                android:drawableLeft="@drawable/ic_gps_fixed"
                android:drawablePadding="7dp"
                android:fontFamily="@font/gilroy_regular"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                android:text="177,Sector-F,Slice-3,Vijay"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="#FCB122"
                android:drawableRight="@drawable/ic_right_arrow__copy"
                android:drawablePadding="7dp"
                android:fontFamily="@font/gilroy_regular"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                android:text="Update Location"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/bak"
            android:fontFamily="@font/gilroy_medium"
            android:text="All items (2)"
            android:textColor="#1C1C1C"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvnoodles"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/noddles" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/alls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/cvnoodles"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="Red sause pasta"
                        android:textColor="#1C1C1C"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/allsss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_subtract"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="Delete"
                        android:textColor="#DC3545"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/allss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alls"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/cvnoodles"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="â‚¹ 105.00"
                        android:textColor="#F4B517"
                        android:textSize="15sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvcon"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/allss"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="#F4B517"
                        app:strokeWidth="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:drawableLeft="@drawable/ic_add"
                            android:drawableRight="@drawable/ic_remove"
                            android:drawablePadding="9dp"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:text="1"
                            android:textColor="#F4B517"
                            android:textSize="16sp" />
                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvnoodless"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/burger" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/allssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/cvnoodless"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="Burger with fries"
                        android:textColor="#1C1C1C"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/allssssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_subtract"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="Delete"
                        android:textColor="#DC3545"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/al"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/allssss"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/cvnoodless"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="â‚¹ 145.00"
                        android:textColor="#F4B517"
                        android:textSize="15sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvn"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/al"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="#F4B517"
                        app:strokeWidth="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:drawableLeft="@drawable/ic_add"
                            android:drawableRight="@drawable/ic_remove"
                            android:drawablePadding="9dp"
                            android:fontFamily="@font/gilroy_medium"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:text="1"
                            android:textColor="#F4B517"
                            android:textSize="16sp" />
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvcoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llone"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:strokeColor="#FCB122"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:drawableLeft="@drawable/ic_coupon"
                android:drawablePadding="9dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:paddingVertical="9dp"
                android:text="Apply Coupon Code"
                android:textColor="#FCB122"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvbiling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/bak"
            android:fontFamily="@font/gilroy_medium"
            android:text="Billing Amount"
            android:textColor="#1C1C1C"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvsubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Subtotal Amount"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvsubtotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="â‚¹ 250.00"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totaldiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Total Discount"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="â‚¹ 75.00"
                    android:textColor="#0B9D00"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Delivery Chargers"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="â‚¹ 15.00"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#F9F9F9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/Final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Final Amount"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="â‚¹ 190.00"
                    android:textColor="#1C1C1C"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/bak"
            android:fontFamily="@font/gilroy_medium"
            android:text="Delivery In"
            android:textColor="#1C1C1C"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="8dp"
            >

            <ImageView
                android:id="@+id/cv1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_watch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/cv1"
                android:fontFamily="@font/gilroy_medium"
                android:text="23 mins"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scooter" />
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvcontinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#FCB122"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/gilroy_regular"
                android:text="ITEMS 1"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/gilroy_regular"
                android:text="TOTAL : â‚¹ 190.00"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cvpaynow"
                android:layout_margin="15dp"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center"
                android:layout_gravity="right"
                android:drawablePadding="5dp"
                android:text="PAY NOW"
                android:drawableRight="@drawable/ic_right_arrow__copy"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
